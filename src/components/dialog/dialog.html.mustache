<div
  tabindex="-1"
  aria-hidden="true"
  class="pointer-events-auto absolute inset-0 z-50 overflow-y-auto bg-gray-900/50 transition-opacity dark:bg-gray-900/80"
>
  <div tabindex="-1" aria-hidden="true" class="flex h-full flex-col">
    <div class="flex-shrink basis-1/5"></div>
    <div class="p-4">
      <div
        class="modal-content mx-auto max-w-2xl rounded-lg bg-white shadow transition-transform duration-200 dark:bg-gray-700"
      >
        <!-- header -->
        <div class="flex items-start justify-between rounded-t border-b p-3 dark:border-gray-600 lg:p-4">
          <h3 class="text-base font-medium text-gray-900 dark:text-white lg:text-xl">{{ title }}</h3>
          <button
            type="button"
            class="modal-close ml-auto inline-flex h-7 w-7 items-center justify-center rounded-lg bg-transparent text-center text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white lg:h-8 lg:w-8 lg:text-base"
            data-modal-toggle="defaultModal"
          >
            <i aria-hidden="true" class="fa fa-xmark"></i>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <!-- /header -->
        <!-- body -->
        <div class="overflow-y-auto p-4 text-sm leading-relaxed text-gray-500 dark:text-gray-400 lg:p-6 lg:text-base">
          {{ body }} {{{ bodyHTML }}}
        </div>
        <!-- /body -->
        <!-- footer -->
        {{#buttons.length}}
        <div class="flex items-center space-x-2 rounded-b border-t border-gray-200 p-4 dark:border-gray-600 lg:p-6">
          {{#buttons}}
          <button
            type="button"
            class="button px-3 py-2 rounded-md lg:px-5 lg:py-2.5 lg:rounded-lg modal-action {{buttonClass}}"
          >
            {{#icon}}
            <i class="mr-2 {{.}}"></i>
            {{/icon}} {{label}}
          </button>
          {{/buttons}}
        </div>
        {{/buttons.length}}
        <!-- /footer -->
      </div>
    </div>
    <div class="flex-shrink basis-3/5"></div>
  </div>
</div>
