{
  "name": "tableturf-battle-card-create",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:coverage": "CI=true coverage=1 vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:debug": "vitest --ui",
    "test:coverage": "vitest --watch=false --coverage",
    "e2e:pc": "playwright test -c playwright.pc.config.ts",
    "e2e:mobile": "playwright test -c playwright.mobile.config.ts",
    "e2e:pc:debug": "playwright test --ui -c playwright.pc.config.ts",
    "e2e:mobile:debug": "playwright test --ui -c playwright.mobile.config.ts",
    "e2e:pc:coverage": "CI=true coverage=1 playwright test -c playwright.pc.config.ts",
    "e2e:mobile:coverage": "CI=true coverage=1 playwright test -c playwright.mobile.config.ts",
    "e2e:report": "nyc report --reporter=lcov --temp-dir=playwright-coverage --report-dir=playwright-coverage",
    "format": "prettier --write '**/*.{css,html.mustache,ts,js,cjs,html}'",
    "check:lint": "eslint .",
    "check:format": "prettier --check '**/*.{css,html.mustache,ts,js,cjs,html}'",
    "check:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@lcov-viewer/istanbul-report": "^1.4.0",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/vite": "^4.0.6",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-istanbul": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.0.0",
    "nyc": "^17.0.0",
    "playwright-test-coverage": "^1.2.12",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.0",
    "vite": "^7.1.12",
    "vite-plugin-istanbul": "^7.0.0",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "mustache": "^4.2.0"
  }
}
